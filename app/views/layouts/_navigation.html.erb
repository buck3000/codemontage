<div class="contain-to-grid">
  <% if user_signed_in? %> 
  <nav class="top-bar logged-in">
  <% else %>
  <nav class="top-bar logged-out">
  <% end %>
    <ul class="title-area">
      <!-- For small screens, use a text title, otherwise use the logo in navigation -->
      <li class="logo hide-for-small"><%= link_to( image_tag("cm_header_logo.png", :size => "192x120"), "/") %></li>
      <li class="name show-for-small"><a href="/">CodeMontage</a></li>
      <li class="toggle-topbar"><a href="#"></a></li>
    </ul>
    <section class="top-bar-section">
      <ul class="left">
        <li><%= link_to "Projects", projects_path %></li>
        <li><%= link_to "Jobs", jobs_path %></li>
        <li class="has-dropdown"><%= link_to "Events", events_path %>
          <ul class="dropdown">
            <li><%= link_to "Women Coders Dinners", code_good_day_path %></li>
            <li><%= link_to "Coder Day of Service", coder_day_path %></li>
            <li><%= link_to "Devs For Good Meetup", "http://meetup.com/Developers-for-Good", :target => "_blank" %></li>
            <li><%= link_to "WriteSpeakCode Conf", "http://writespeakcode.com", :target => "_blank" %></li>
          </ul>
        </li>
        <li><%= link_to "Our Story", our_story_path %></li>
        <% if !user_signed_in? %>
        <li class="cta"><%= link_to "Sign Up", "/auth/github", :class => "medium radius index button" %></li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
